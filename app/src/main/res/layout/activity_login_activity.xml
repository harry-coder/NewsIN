

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/commentScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"

    >


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="25dp"

        >

        <com.okhlee.capp.CustomElements.CustomFontTextView
            android:id="@+id/customFontTextView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="50dp"
            android:text="Logo"
            android:textColor="@color/footerBg"
            android:textSize="40sp"
            app:layout_constraintLeft_toLeftOf="@+id/et_username"
            app:layout_constraintRight_toRightOf="@+id/et_username"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="61dp"
            android:background="@drawable/edittext_shape"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/user_icon"
            android:ems="10"
            android:hint="@string/username"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#ffffff"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customFontTextView"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/edittext_shape"
            android:drawableStart="@drawable/password_icon"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/et_username"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/et_username"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/et_username"
            app:layout_constraintHorizontal_bias="0.0" />

        <com.okhlee.capp.CustomElements.CustomFontTextView
            android:id="@+id/tv_login"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/button_shape"
            android:gravity="center"
            android:text="Login"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/et_password"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/et_password"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/et_password"
            app:layout_constraintHorizontal_bias="0.0" />

        <com.okhlee.capp.CustomElements.CustomFontTextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textSize="15sp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_login"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/tv_login"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_login" />

        <com.okhlee.capp.CustomElements.CustomFontTextView
            android:id="@+id/tv_facebook"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/facebooklogin_shape"
            android:gravity="center"
            android:text="Login with Facebook"
            android:textSize="20sp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_login"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/tv_login"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <com.okhlee.capp.CustomElements.CustomFontTextView
            android:id="@+id/tv_forgetpassword"
            android:layout_width="0dp"
            android:layout_height="17dp"
            android:layout_marginStart="42dp"
            android:text="Forgot Passoword?"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"

            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_facebook" />

        <com.okhlee.capp.CustomElements.CustomFontTextView
            android:id="@+id/tv_createaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="42dp"
            android:text="Create an Account"
            android:textStyle="bold"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_forgetpassword" />

        <com.okhlee.capp.CustomElements.CustomFontTextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="|"
            app:layout_constraintLeft_toRightOf="@+id/tv_forgetpassword"
            app:layout_constraintRight_toLeftOf="@+id/tv_createaccount"

            tools:layout_constraintTop_creator="1"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintTop_toTopOf="@+id/tv_createaccount"
            android:layout_marginTop="0dp" />
    </android.support.constraint.ConstraintLayout>

</ScrollView>
